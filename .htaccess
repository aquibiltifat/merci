# ==========================================================
# üåê MERCiedu.org - COMPLETE .HTACCESS CONFIGURATION
# ==========================================================

RewriteEngine On

# ----------------------------------------------------------
# 1Ô∏è‚É£ Force HTTPS and non-www (https://merciedu.org)
# ----------------------------------------------------------
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.merciedu\.org$ [NC]
RewriteRule ^ https://merciedu.org%{REQUEST_URI} [L,R=301]

# ----------------------------------------------------------
# 2Ô∏è‚É£ Redirect /index, /index.html, /index.php to homepage
# ----------------------------------------------------------
RewriteCond %{THE_REQUEST} \s/+index(\.php|\.html?)?\s [NC]
RewriteRule ^index(\.php|\.html?)?$ https://merciedu.org/ [R=301,L]

# ----------------------------------------------------------
# 3Ô∏è‚É£ Pretty URLs (no .html in URL)
#    /about        -> about.html
#    /scholarship  -> scholarship.html
#    /gallery      -> gallery.html
#    /programs     -> programs.html
#    /contact      -> contact.html
# ----------------------------------------------------------

# If the requested path is NOT an existing file or folder,
# but a .html version exists, serve that .html file.
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Redirect .html URLs to clean version (SEO friendly)
# /about.html  -> /about
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# ==========================================================
# üîí SECURITY & PROTECTION SETTINGS
# ==========================================================

# üö´ Disable directory listing (no folder browsing)
Options -Indexes

# üîê Protect sensitive files (.htaccess, .env, config, git, etc.)
<FilesMatch "(\.htaccess|\.htpasswd|\.env|\.git|composer\.json|composer\.lock|wp-config\.php|config\.php)$">
    Require all denied
</FilesMatch>

# Deny ALL hidden dotfiles (like .gitignore, .env.local, etc.)
<Files ".*">
    Require all denied
</Files>

# üß± Security headers + basic caching
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "no-referrer-when-downgrade"
    # ‚ö†Ô∏è If you use external CDNs (Bootstrap, Google Fonts, etc.),
    # you will need to relax this CSP accordingly.
    Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; font-src 'self' data:;"
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType application/x-javascript "access plus 1 week"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
</IfModule>

# üö´ Prevent hotlinking (others embedding your images)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} \.(jpe?g|png|gif|svg|webp|ico)$ [NC]
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?merciedu\.org [NC]
RewriteRule . - [F,L]

# üö∑ Hide server info
ServerSignature Off

# ----------------------------------------------------------
# 4Ô∏è‚É£ Custom error pages (create these files)
# ----------------------------------------------------------
ErrorDocument 403 /access-denied
ErrorDocument 404 /404

# ==========================================================
# ‚úÖ END OF MERCiedu.org CONFIG
# ==========================================================
